<p id="notice"><%= notice %></p>

<h1><%= t('models.Product') %></h1>

<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
		<th><%= Product.human_attribute_name :name %></th>
		<th><%= Product.human_attribute_name :price %></th>
		<th><%= Product.human_attribute_name :stock %></th>
		<th><%= Product.human_attribute_name :note %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.note %></td>
        <td><%= link_to :Show, product %></td>
        <td><%= link_to t('models.Edit'), edit_product_path(product) %></td>
        <td><%= link_to t('models.Destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to t('models.New_Product'), new_product_path %>
